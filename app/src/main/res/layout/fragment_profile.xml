<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.FragmentProfile"
    android:background="@drawable/background_signup">
    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="italic"
        android:textSize="30dp"
        android:textColor="@color/bleu"/>
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon_account"
        android:layout_marginStart="108dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView"
        android:text="Name : "
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtName"
        android:layout_below="@+id/imgView"
        android:hint="Name User"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/txtPrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Prenom : "
        android:textStyle="bold" />
    <EditText
        android:id="@+id/prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtPrenom"
        android:layout_below="@+id/name"
        android:hint="Prenom User"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/txtNumberPhon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPrenom"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="NumberPhone : "
        android:textStyle="bold" />
    <EditText
        android:id="@+id/numberPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtNumberPhon"
        android:layout_below="@+id/prenom"
        android:hint="Number phone"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumberPhon"
        android:layout_marginStart="30dp"
        android:layout_marginTop="55dp"
        android:text="Email : "
        android:textStyle="bold" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtEmail"
        android:layout_below="@+id/numberPhone"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"/>

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Password : "
        android:textStyle="bold" />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtPassword"
        android:layout_below="@+id/email"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="45dp"/>

    <Button
        android:id="@+id/modifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPassword"
        android:layout_marginTop="70dp"
        android:text="Enregestrie"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/teal_200"/>
</RelativeLayout>